# 港股量化交易 AI Agent 系统环境配置示例
# 复制此文件为 .env 并修改相应的配置值

# 系统配置
APP_NAME=港股量化交易AI Agent系统
APP_VERSION=1.0.0
DEBUG=false

# 数据库配置
DATABASE_URL=postgresql://user:password@localhost:5432/hk_quant_db

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# 港股数据源配置
HK_DATA_SOURCE=yfinance
DATA_UPDATE_INTERVAL=60

# Agent配置
MAX_CONCURRENT_AGENTS=10
AGENT_HEARTBEAT_INTERVAL=30

# 交易配置
TRADING_ENABLED=false
MAX_POSITION_SIZE=1000000.0
RISK_LIMIT=0.02

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/hk_quant_system.log

# API配置
API_HOST=0.0.0.0
API_PORT=8000

# 监控配置
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# 第三方服务配置
# 数据提供商API密钥
DATA_PROVIDER_API_KEY=your_api_key_here

# 交易平台配置
TRADING_PLATFORM_API_KEY=your_trading_api_key_here
TRADING_PLATFORM_SECRET=your_trading_secret_here

# 风险控制配置
MAX_DAILY_LOSS=0.05
MAX_POSITION_CONCENTRATION=0.1
STOP_LOSS_THRESHOLD=0.03
